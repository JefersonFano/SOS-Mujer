<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <uses-permission android:name="android.permission.INTERNET"/>

    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />
    <uses-feature
        android:name="android.hardware.camera2"
        android:required="true" />

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.SOSMujer"
        tools:targetApi="31">
        <activity
            android:name=".actividades.ContactoRegistroActivity"
            android:exported="false" />
        <activity
            android:name=".actividades.PerfilActivity"
            android:exported="false" />
        <activity
            android:name=".actividades.PanicoActivity"
            android:exported="false" />
        <activity
            android:name=".actividades.ContactoActivity"
            android:exported="false" />
        <activity
            android:name=".actividades.ReportarActivity"
            android:exported="false" />
        <activity
            android:name=".actividades.BienvenidaActivity"
            android:exported="false" />
        <activity
            android:name=".actividades.MenuActivity"
            android:exported="false" />
        <activity
            android:name=".actividades.RegistroActivity"
            android:exported="false" />
        <activity
            android:name=".actividades.SesionActivity"
            android:exported="false" />
        <activity
            android:name=".actividades.CargaActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="com.example.sos_mujer.provider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>
    </application>

</manifest>