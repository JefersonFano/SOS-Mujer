<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragmentos.ConfiguracionFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/regLblRegistro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/morado"
                android:gravity="center"
                android:padding="20dp"
                android:text="@string/lblSosMujer"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />
        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="15dp"
            app:cardUseCompatPadding="true"
            app:cardElevation="5dp"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:layout_marginBottom="15dp"
                    android:text="@string/lblConfiguracion"
                    android:textSize="25sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/lblIdioma" />

                <Spinner
                    android:id="@+id/confCboIdioma"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:entries="@array/cboIdioma" />

                <CheckBox
                    android:id="@+id/frgCfgChkNotificaciones"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/lblNotificaciones" />

                <TextView
                    android:id="@+id/frgCfgLblSonido"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/lblSonido" />

                <SeekBar
                    android:id="@+id/frgCfgBarSonido"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:max="100"
                    android:progress="50" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp">

                    <Button
                        android:id="@+id/frgCfgBtnAplicar"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="@string/lblAplicar"
                        android:textAllCaps="false"
                        android:layout_marginEnd="8dp" />

                    <Button
                        android:id="@+id/frgCfgBtnRestaurar"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="@string/lblRestaurar"
                        android:textAllCaps="false"
                        android:layout_marginStart="8dp" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Secci칩n: Funcionalidades -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="15dp"
            app:cardUseCompatPadding="true"
            app:cardElevation="5dp"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/lblFuncionalidades"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:layout_marginBottom="10dp" />

                <CheckBox
                    android:id="@+id/frgCfgChkPanicoVolumen"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/lblActivarBoton"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/lblEnvioAlertas"
                    android:layout_marginTop="10dp" />

                <Spinner
                    android:id="@+id/confCboIntervalo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:entries="@array/cboIntervalo"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Secci칩n: Apariencia y Usabilidad -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="15dp"
            app:cardUseCompatPadding="true"
            app:cardElevation="5dp"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/lblApariencia"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:layout_marginBottom="10dp" />

                <Switch
                    android:id="@+id/frgCfgSwitchTema"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/lblModoOscuro"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/lblTama침oTexto"
                    android:layout_marginTop="10dp" />

                <SeekBar
                    android:id="@+id/frgCfgSeekTexto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:max="30"
                    android:progress="16"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Secci칩n: Extras -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="15dp"
            app:cardUseCompatPadding="true"
            app:cardElevation="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/lblExtras"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:layout_marginBottom="10dp"/>

                <Button
                    android:id="@+id/frgCfgBtnAcerca"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/lblAcercaApp"
                    android:textAllCaps="false" />

                <Button
                    android:id="@+id/frgCfgBtnPruebaAlerta"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="@string/lblProbarAlerta"
                    android:textAllCaps="false" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>