<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragmentos.ConfiguracionFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Título -->
        <TextView
            android:id="@+id/confLblTitulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/morado"
            android:gravity="center"
            android:padding="20dp"
            android:text="@string/lblConfiguracion"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:textStyle="bold" />

        <!-- Card: Idioma y notificaciones -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:cardCornerRadius="15dp"
            app:cardUseCompatPadding="true"
            app:cardElevation="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/lblIdioma"
                    android:textStyle="bold"
                    android:textSize="16sp"/>

                <Spinner
                    android:id="@+id/confCboIdioma"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:entries="@array/cboIdioma" />

                <CheckBox
                    android:id="@+id/frgCfgChkNotificaciones"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/lblNotificaciones" />

                <TextView
                    android:id="@+id/frgCfgLblSonido"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/lblSonido"
                    android:layout_marginTop="12dp" />

                <SeekBar
                    android:id="@+id/frgCfgBarSonido"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:max="100"
                    android:progress="70" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Card: Apariencia -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="15dp"
            app:cardUseCompatPadding="true"
            app:cardElevation="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/lblApariencia"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_marginBottom="8dp"/>

                <Switch
                    android:id="@+id/frgCfgSwitchTema"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/lblModoOscuro" />

                <TextView
                    android:id="@+id/frgCfgLblTamañoTexto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/lblTamañoTexto"
                    android:layout_marginTop="12dp" />

                <SeekBar
                    android:id="@+id/frgCfgBarTamañoTexto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:max="3"
                    android:progress="1" />

                <!-- Vista previa del tamaño de texto -->
                <TextView
                    android:id="@+id/frgCfgLblPreviewTexto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/lblPreviewTexto"
                    android:layout_marginTop="8dp"
                    android:textSize="16sp" />

                <!-- Botones Aplicar / Restaurar -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginTop="16dp">

                    <Button
                        android:id="@+id/frgCfgBtnAplicar"
                        android:layout_width="0dp"
                        android:layout_weight="  1"
                        android:layout_height="wrap_content"
                        android:text="@string/lblAplicar"
                        android:textAllCaps="false"
                        android:backgroundTint="@color/morado"
                        android:textColor="@color/white"
                        android:layout_marginEnd="8dp"/>

                    <Button
                        android:id="@+id/frgCfgBtnRestaurar"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="@string/lblRestaurar"
                        android:textAllCaps="false"
                        android:backgroundTint="@color/morado"
                        android:textColor="@color/white"
                        android:layout_marginStart="8dp"/>

                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>
